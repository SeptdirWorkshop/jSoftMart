<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="content" label="JGLOBAL_FIELDSET_CONTENT">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   size="40"
			   required="true"/>
		<field name="introtext" type="textarea"
			   label="COM_JSOFTMART_INTROTEXT"
			   filter="text"/>
		<field name="fulltext" type="editor"
			   label="COM_JSOFTMART_FULLTEXT"
			   filter="JComponentHelper::filterText"
			   buttons="true"
			   hide="readmore,pagebreak"/>
	</fieldset>
	<fieldset name="images" label="COM_JSOFTMART_IMAGES">
		<field name="cover" type="image" label="COM_JSOFTMART_IMAGES_COVER"/>
		<field name="icon" type="image" label="COM_JSOFTMART_IMAGES_ICON"/>
	</fieldset>
	<fieldset name="metadata" label="COM_JSOFTMART_META">
		<fields name="metadata">
			<field name="title" type="text" label="COM_JSOFTMART_META_TITLE"/>
			<field name="description" type="textarea"
				   label="COM_JSOFTMART_META_DESCRIPTION"
				   rows="3"
				   cols="30"/>
			<field name="keywords" type="textarea"
				   label="COM_JSOFTMART_META_KEYWORDS"
				   rows="3"
				   cols="30"/>
			<field name="robots" type="list" label="COM_JSOFTMART_META_ROBOTS">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
				<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
			</field>
			<field name="image" type="image" label="COM_JSOFTMART_META_IMAGE"/>
		</fields>
	</fieldset>
</form>